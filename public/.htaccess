RewriteEngine On

# ‚úÖ Don't rewrite requests to assets (JS, CSS, images)
RewriteCond %{REQUEST_URI} ^/assets/ [NC]
RewriteRule ^ - [L]

# ‚úÖ Don't rewrite if file or directory exists
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# üîÅ Otherwise send everything else to index.php
RewriteRule ^ index.php?url=$1 [QSA,L]
